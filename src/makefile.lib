LIB = $(TOP)/../../lib
PD = $(TOP)/../../parsers
TG = $(PD)/thunk_gen
MP = $(PD)/mkproto.sh
GT = $(PD)/gen_thunks.sh

all ::
	../makemake.exe
	$(MAKE) -f makefile.sub
	../makemake.exe -2
	$(MAKE) $(LIB)/lib$(LIBNAME).so

MAKEFILE_LIB = 1
include $(TOP)/../makefile.inc

OBJS :=
AS_OBJS :=

ifneq ($(wildcard makefile.oi),)
include makefile.oi
endif
ifneq ($(wildcard makefile.oio),)
include makefile.oio
endif

$(LIB)/lib$(LIBNAME).a : $(AS_OBJS) makefile.rfo
	@-$(MISC) rm $@
	$(CROSS_AR) q $(LIB)/lib$(LIBNAME).a @makefile.rfo
	$(CROSS_AR) s $(LIB)/lib$(LIBNAME).a

$(TG):
	$(MAKE) -C $(PD)

crt0/_crt0.o:
	$(MAKE) -C crt0 _crt.o

# XXX not yet complete
thunk_calls.tmp thunk_asms.tmp plt.inc &: $(LIB)/lib$(LIBNAME).a \
    crt0/_crt0.o $(TG)
	$(MP) $< $(TOP)/crt0/_crt0.o $(TOP)/../../include thunk_asms.tmp thunk_calls.tmp plt.inc

thunk_calls.h: thunk_calls.tmp
	$(TG) <$< >$@

thunk_asms.h: thunk_asms.tmp
	$(GT) $(TG) $< $(PD) >$@

$(LIB)/lib$(LIBNAME).so : $(OBJS) makefile.rf thunk_calls.h thunk_asms.h
	$(CROSS_GCC) -shared -o $@ @makefile.rf

newlib:
	$(MISC) rm $(LIB)/lib$(LIBNAME).a
	$(CROSS_AR) q $(LIB)/lib$(LIBNAME).a @makefile.rf id_$(LIBNAME).o
	$(CROSS_AR) s $(LIB)/lib$(LIBNAME).a

clean ::
	$(TOP)/../makemake.exe
	$(MAKE) -f makefile.sub SUBARGS=clean
	@-$(MISC) rm makefile.oi makefile.rf makefile.rfo
